############################
# Backend Configuration
############################

# Banco de dados. Para SQLite, use: sqlite:///./data.db
DATABASE_URL=sqlite:///./data.db

# Estratégia de multi‑tenancy: 'db', 'schema' ou 'column'
TENANCY_STRATEGY=column

# Segurança JWT
JWT_SECRET=changeme
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=1440

# Contato do controlador de dados (LGPD)
PRIVACY_CONTACT_EMAIL=privacidade@example.com

# SMTP (opcional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Outros
# Ajuste CORS se necessário (separados por vírgula)
CORS_ORIGINS=http://localhost:5173

# Número de workers Uvicorn (para deploy em produção)
UVICORN_WORKERS=4
