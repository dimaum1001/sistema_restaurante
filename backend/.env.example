############################
# Backend Configuration
############################

# Banco de dados.
# Local: sqlite:///./data.db
# Producao (Render): postgresql+psycopg2://user:password@host:5432/dbname
DATABASE_URL=sqlite:///./data.db

# Estrategia de multi-tenancy: db, schema ou column
TENANCY_STRATEGY=column

# Seguranca JWT
JWT_SECRET=changeme
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=1440

# Contato do controlador de dados (LGPD)
PRIVACY_CONTACT_EMAIL=privacidade@example.com

# SMTP (opcional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# CORS (separados por virgula)
# Exemplo: http://localhost:5173,https://sua-app.vercel.app
CORS_ORIGINS=http://localhost:5173

# Numero de workers Uvicorn (caso necessario)
UVICORN_WORKERS=4
